extends layout
block page
  - var menu = 'post'
block content
  if (user)
    h2 Post an Article
    div.col-md-8
      form(action="/create", method="POST", role="form")
        div.form-group
          label(for="title") Title
          input#title.form-control(name="title", type="text", placeholder="Title")
        div.form-group
          label(for="tag") Tag
          input#tag.form-control(name="tag", type="text", placeholder="Tag")
        div.form-group
          label(for="text") Text
          textarea#text.form-control(rows="5", name="text", placeholder="Text")
        p
          button.btn.btn-primary(type="submit") Save
